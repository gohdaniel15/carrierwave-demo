<h1>All Users</h1>

<table>
  <thead>
    <th>No.</th>
    <th>Name</th>
    <th>Picture</th>
  </thead>

  <tbody>
    <% @users.each.with_index(1) do |user, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= user.email %></td>
        <td><%= image_tag user.avatar.thumb.url, size: '50x50' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
